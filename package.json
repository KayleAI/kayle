{
	"name": "kayle",
	"version": "0.4.0",
	"devDependencies": {
		"husky": "^9.1.6",
		"turbo": "^2.0.14",
		"@biomejs/biome": "^1.9.3",
		"typescript": "^5.4.5"
	},
	"engines": {
		"node": ">=20"
	},
	"license": "AGPL-3.0-only",
	"packageManager": "bun@1.1.15",
	"private": true,
	"scripts": {
		"build": "turbo build",
		"dev": "turbo dev",
		"lint": "turbo lint",
		"deploy": "turbo deploy",
		"serve": "turbo serve",
		"format": "bunx biome format --write ./",
		"infisical": "infisical run -- bun run",
		"prepare": "husky",
		"auth:generate": "npx @better-auth/cli generate -y --config=packages/auth/server.ts --output=packages/db/schema",
		"auth:migrate": "npx @better-auth/cli migrate -y --config=packages/auth/server.ts",
		"db:introspect": "drizzle-kit introspect --config=packages/db/drizzle.config.ts && kysely-codegen --env-file=.env --out-file packages/db/schema.d.ts",
		"db:generate": "drizzle-kit generate --config=packages/db/drizzle.config.ts",
		"db:migrate": "drizzle-kit migrate --config=packages/db/drizzle.config.ts"
	},
	"workspaces": ["apps/*", "packages/*", "engine/", "platform/"],
	"dependencies": {
		"next": "latest"
	}
}
