{
	"$schema": "https://turbo.build/schema.json",
	"ui": "tui",
	"globalEnv": [
		"VERCEL_PROJECT_PRODUCTION_URL",
		"NEXT_PUBLIC_SITE_URL",
		"NODE_ENV",
		"ARCJET_KEY",
		"KAYLE_API_KEY",
		"DATABASE_URL",
		"UNKEY_AUTH_TOKEN",
		"UNKEY_API_ID",
		"NEXT_PUBLIC_OPENPANEL_CLIENT_ID",
		"OPENPANEL_SECRET_KEY",
		"RESEND_API_KEY"
	],
	"tasks": {
		"build": {
			"dependsOn": ["^build"],
			"inputs": ["$TURBO_DEFAULT$", ".env*"],
			"outputs": [".next/**", "!.next/cache/**"]
		},
		"lint": {
			"dependsOn": ["^lint"]
		},
		"dev": {
			"cache": false,
			"persistent": true
		},
		"deploy": {
			"dependsOn": ["^deploy"]
		},
		"serve": {
			"dependsOn": ["^serve"]
		},
		"db:generate": {
			"dependsOn": ["^db:generate"]
		}
	}
}
